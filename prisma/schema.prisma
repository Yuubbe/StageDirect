generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id            Int      @id @default(autoincrement())
  nom           String
  prenom        String
  email         String   @unique
  password      String
  etablissement String
  niveau        String
  createdAt     DateTime @default(now())
  role          Role     @default(USER)
  verified Boolean @default(false) // Champ pour vérifier l'email
  verificationToken String?  // Token temporaire pour la vérification
  avatar        String?  // Si tu veux un avatar optionnel
}


enum Role {
  USER
  ADMIN
}

model Stage {
  id            Int      @id @default(autoincrement())
  titre         String
  description   String
  dateDebut     DateTime
  dateFin       DateTime
  duree         Int
  remuneration  Float
  competences   String
  entrepriseId  Int
  utilisateurId Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}


model Entreprise {
  id           Int      @id @default(autoincrement())
  nom          String
  siret        String @unique 
  secteur      String
  adresse      String
  code_postal  String
  ville        String
  site_web     String
  description  String?
  contact_nom  String
  contact_email String
  contact_telephone String
}
