generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Etudiant {
  id           Int     @id @default(autoincrement())
  nom          String
  prenom       String
  email        String  @unique
  password     String
  etablissement String
  niveau       String
  createdAt    DateTime @default(now())
}